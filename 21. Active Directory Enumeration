# Tell me my domain...
$ Get-ADDomain

# Where's the DC?
$ Get-ADDomainController

# IP of Domain Computer?
$ (Get-ADComputer $ComputerName -Properties IPv4Address).IPv4Address

# Search for a user
$ Get-ADUser -Filter * | Where-Object {$_.SamAccountName -like '*bsmith*'}

# Find all members of a group
$ Get-ADGroupMember -Identity 'Domain Admins'

# Reset a user's password
$ Set-ADAccountPassword -Identity '<Distinguished Name>' -Reset -NewPassword (ConvertTo-SecureString -AsPlainText "<new password>" -Force)

# Domain join a computer
$ Add-Computer -DomainName ocp.com -Credential <domain>\Administrator -Force -Restart

